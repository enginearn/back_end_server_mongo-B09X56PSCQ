// blogRead.ejs

<!DOCTYPE html>
<html lang="ja">
<head>
    <title><%= singleBlog.title %> </title>
    <%- include("./head"); %>
</head>
<body>
    <%- include("./header"); %>
    <main>
        <div class="blog-read">
            <h1><%= singleBlog.title %></h1>
            <img src="/public/images<%= singleBlog.image %> " alt="blog-image">
            <p><%= singleBlog.textBody %></p>
        </div>
        <div class="button">
            <% if (session !== undefined) { %>
                <a href="/blog/<%= singleBlog.id %>/edit">編集</a>
            <% } %>
            <% if (session !== undefined) { %>
                <a href="/blog/<%= singleBlog.id %>/delete">削除</a>
            <% } %>
        </div>
    </main>
    <%- include("./footer"); %>
</body>
</html>