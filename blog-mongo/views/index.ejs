// index.ejs

<!DOCTYPE html>
<html lang="ja">
<head>
    <title>Node Advanced Blog</title>
    <%- include("./head"); %>
</head>
<body>
    <%- include("./header"); %>
    <main>
        <div class="grid-container">
            <% allBlogs.forEach((blog) => { %>
            <div class="card">
                <a href="blog/<%= blog._id %>">
                    <img src="/public/images<%= blog.image %> " alt="blog-image">
                    <div class="texts-area">
                        <h2><%= blog.title %></h2>
                        <p><%= blog.summary  %></p>
                    </div>
                </a>
            </div>
            <% })%>
        </div>
        <div class="button">
            <% if (session !== undefined) { %>
                <a href="/blog/create" class="create-button">記事を書く</a>
            <% } %>
            <% if (session === undefined) { %>
                <a href="/user/login">ログイン</a>
            <% } %>
            <% if (session === undefined) { %>
                <a href="/user/create">新規登録</a>
            <% } %>
        </div>
    </main>
    <%- include("./footer"); %>
</body>
</html>